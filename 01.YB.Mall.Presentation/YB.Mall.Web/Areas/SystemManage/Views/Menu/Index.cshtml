@{
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    $(function() {
        $.menu.initGrid();
        $("#btn_search").click(function() {
            $("#grid").jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() }
            }).trigger('reloadGrid');
        });
    });

    (function($) {
        $.menu = {
            initGrid: function() {
                $("#grid").dataGrid({
                    treeGrid: true,
                    treeGridModel: "adjacency",
                    ExpandColumn: "UrlPath",
                    url: "/SystemManage/Menu/InitGrid",
                    height: $(window).height() - 96,
                    colModel: [
                        { label: "主键", name: "MenuId", hidden: true, key: true },
                        { label: '名称', name: 'MenuName', width: 200, align: 'left' },
                        { label: '连接', name: 'UrlPath', width: 260, align: 'left' },
                        {
                            label: '目标',
                            name: 'Target',
                            width: 80,
                            align: 'center',
                            formatter: function(cellvalue) {
                                if (cellvalue === "expand") {
                                    return "无页面";
                                }  else if (cellvalue === "open") {
                                    return "弹出页";
                                } else if (cellvalue === "blank") {
                                    return "新窗口";
                                }else if (cellvalue === "iframe") {
                                    return "框架页";
                                } else return "";
                            }
                        },
                        {
                            label: "菜单",
                            name: "IsMenu",
                            width: 60,
                            align: "center",
                            formatter: function(cellvalue) {
                                return cellvalue? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                            }
                        },
                        {
                            label: "按钮",
                            name: "IsButton",
                            width: 60,
                            align: "center",
                            formatter: function(cellvalue) {
                                return cellvalue? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                            }
                        },
                        {
                            label: "有效",
                            name: "IsEnabled",
                            width: 60,
                            align: "center",
                            formatter: function(cellvalue) {
                                return cellvalue? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                            }
                        },
                        { label: '介绍', name: 'F_Description', width: 300, align: 'left' }
                    ]
                });
            },
            popupForm: function(title,url) {
                $.modalOpen({
                    id: "Form",
                    title: title,
                    url: url,
                    width: "700px",
                    height: "440px",
                    callBack: function (iframeId) {
                        top.frames[iframeId].submitForm();
                    }
                });
            },
            popupDetail: function (title, url,button) {
                $.modalOpen({
                    id: "Details",
                    title: title,
                    url: url,
                    width: "700px",
                    height: "490px",
                    btn: button
                });
            }
        };
    })(jQuery);

    
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增菜单",
            url: "/SystemManage/Module/Form",
            width: "700px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#grid").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Form",
            title: "修改菜单",
            url: "/SystemManage/Module/Form?keyValue=" + keyValue,
            width: "700px",
            height: "440px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        $.deleteForm({
            url: "/SystemManage/Module/DeleteForm",
            param: { keyValue: $("#grid").jqGridRowValue().F_Id },
            success: function() {
                $.currentWindow().$("#grid").resetSelection();
                $.currentWindow().$("#grid").trigger("reloadGrid");
            }
        });
    }
    function btn_details() {
        var keyValue = $("#grid").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看菜单",
            url: "/SystemManage/Module/Details?keyValue=" + keyValue,
            width: "700px",
            height: "490px",
            btn: null
        });
    }
    function btn_modulebutton() {
        var keyValue = $("#grid").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "modulebutton",
            title: "系统按钮",
            url: "/SystemManage/ModuleButton/Index?moduleId=" + keyValue,
            width: "950px",
            height: "600px",
            btn: null
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="Add" authorize="yes" class="btn btn-primary dropdown-text" onclick="$.menu.popupForm('新增菜单', '/SystemManage/Menu/Form')"><i class="fa fa-plus"></i>新增菜单</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="Edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改菜单</a></li>
                <li><a id="Remove" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除菜单</a></li>
                <li><a id="View" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看菜单</a></li>
                <li class="split"></li>
                <li><a id="NF-modulebutton" authorize="yes" onclick="btn_modulebutton()"><i class="fa fa-gavel"></i>按钮管理</a></li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
